# Database
DATABASE_URL=sqlite:///./lms.db

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Services
RESEND_API_KEY=your-resend-api-key
# Note: Email service uses onboarding@resend.dev for testing
# In production, verify your domain at resend.com/domains and update
# the from_email in app/services/email_service.py

VERCEL_BLOB_TOKEN=your-vercel-blob-token

# iPay Africa Payment Gateway
# For testing/development, use demo credentials:
#   IPAY_VENDOR_ID=demo
#   IPAY_SECRET_KEY=demoCHANGED
# For production, get credentials from https://www.ipayafrica.com/
# See backend/app/services/IPAY_AFRICA_SETUP.md for detailed setup
IPAY_VENDOR_ID=demo
IPAY_SECRET_KEY=demoCHANGED

# 123FormBuilder Integration
# Get your API key from 123FormBuilder dashboard
FORMBUILDER_API_KEY=
# Webhook secret for validating webhook signatures (optional but recommended)
FORMBUILDER_WEBHOOK_SECRET=
# Webhook URL to configure in 123FormBuilder: {BACKEND_URL}/api/webhooks/123formbuilder
# Example: https://your-domain.com/api/webhooks/123formbuilder

# Application
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
ENVIRONMENT=development

# Security Settings
ENABLE_CSRF=false
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE=20971520
MAX_IMAGE_SIZE=5242880
MAX_PDF_SIZE=20971520

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000

